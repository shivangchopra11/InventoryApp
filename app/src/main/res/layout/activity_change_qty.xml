<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Quantity"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/button_initial">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/subQty"
                android:background="@drawable/ic_remove_white_48dp"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/tvQty"
                android:gravity="center"
                android:textColor="@android:color/background_light"
                android:layout_weight="1"
                android:inputType="number"
                android:ems="4"
                android:layout_margin="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/addQty"
                android:background="@drawable/ic_add_white_48dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            android:text="DONE"
            android:id="@+id/btnSubQty"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>
    </LinearLayout>

</FrameLayout>